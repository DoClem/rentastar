
  <div class="container-fluid d-flex flex-column justify-content-center align-items-center mt-5">
    <h1><strong> CELEBRITIES </strong></h1>
    <style>
      .container-fluid h1 {
        font-size: 50px;
      }
    </style>

    <div>
      <div class="container-fluid d-flex flex-column justify-content-center align-items-center">
        <div class="d-flex justify-content-center align-items-start w-100">
          <div class="col-12 col-md-6 mb-5 me-5" style="margin-top: 100px;">
            <div class="text-center">
              <h2 style="padding:20px" class="fs-1 mb-1"><strong>Book</strong> or <strong> Create</strong> your favorite celebrity clones.</h2>
<button type="button" class="btn btn-outline-primary rounded-5" data-bs-toggle="modal" data-bs-target="#exampleModal">Create Your Own Celebrity Clone</button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Create your celebrity</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
   <%= simple_form_for(@celebrity) do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :age %>
      <%= f.input :address %>
      <%= f.input :photo, as: :file %>
      <%= f.input :price %>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger rounded-5" data-bs-dismiss="modal">Close</button>
      <%= f.submit class: "btn btn-outline-primary rounded-5" %>
      </div>
  <% end %>
      </div>
    </div>
  </div>
</div>
  <div class="col-12 col-md-5 mb-4 me-4 w-100" style="margin-top: 50px;">
      <form class="d-flex" action="/search" method="get">
        <input class="form-control me-2 rounded-3" type="search" placeholder="Search celebrities ..." aria-label="Search" name="query">
        <button class="btn btn-outline-primary rounded-5" type="submit">Search</button>
      </form>
    </div>

            </div>
          </div>
        </div>
      </div>
      <div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @celebrities.each do |celebrity| %>
      <div class="col">
        <div class="card" style="background-color: rgba(250, 0, 0, 0.08); border-radius: 50px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
          <%= link_to celebrity_path(celebrity), style: "text-decoration: none; color: inherit;" do %>
            <div class="card-body rounded-5 text-center">
              <img src="https://cache.cosmopolitan.fr/data/photo/w1200_h630_ci/66/rihanna.jpg" class="d-block mx-auto img-fluid rounded-5 pb-3" alt="<%= celebrity.first_name %> <%= celebrity.last_name %>">
              <h3 class="card-title"><strong><%= celebrity.first_name %> <%= celebrity.last_name %></strong></h3>
              <h4 class="card-text">$ <%= celebrity.price %> / Day</h4>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
    </div>
  </div>
