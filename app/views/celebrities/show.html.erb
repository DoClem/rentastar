  <div class="container-fluid d-flex flex-column justify-content-center align-items-center mt-5">
<h1><strong>Book</strong> <%= @celebrity.first_name %> <%= @celebrity.last_name %></h1>
 <style>
        .container-fluid h1 {
            font-size: 50px  ;
        }
</style>

 <div class="row mt-5">
    <div class="col">
      <a class="btn btn-outline-primary rounded-5 btn-lg" href="/celebrities" style="display: block;">Back To Celebrities</a>
    </div>
  </div>
<div class="d-flex flex-column justify-content-center align-items-center" style="padding:50px">
  <div class="row row-cols-1 row-cols-md-2 g-4 d-flex flex-column justify-content-center align-items-center" style="padding-top:50px">
    <div class="col">
    <div class="card" style="background-color: rgba(250, 0, 0, 0.08); border-radius: 50px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); padding: 20px; position: relative; padding-bottom: 40px;">
                <div class="card-body rounded-5 text-center">
        <img src="https://cache.cosmopolitan.fr/data/photo/w1200_h630_ci/66/rihanna.jpg" class="d-block mx-auto img-fluid rounded-5 pb-3" alt="...">
        <div class="card-body rounded-5 text-center">
          <h3><strong><%= @celebrity.first_name %> <%= @celebrity.last_name %></strong></h3>
          <h4>$ <%= @celebrity.price %> / Day</h4>
        </div>
        </div>

        <div class="d-flex justify-content-end" style="position: absolute; bottom: 20px; right: 20px;">
          <button type="button" class="btn btn-outline-success rounded-5 btn-lg" data-bs-toggle="modal" data-bs-target="#exampleModal">Book Celebrity</button>
        </div>

        <div class="d-flex justify-content-start" style="position: absolute; bottom: 20px; left: 20px;">
          <%= link_to "Delete Celebrity", celebrity_path(@celebrity), data: {turbo_method: "delete", turbo_confirm: "Are you sure ?" }, class: "btn btn-outline-danger rounded-5 btn-lg me-2" %>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Booking</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="col">
        <%= simple_form_for([@celebrity, @booking], html: { data: { controller: "datepicker" }}) do |f| %>
          <h3> <%="Please Select Your Dates"%></h3>
          <%= f.input :start_date, as: :string, input_html: { data: { datepicker_unavailable_dates_value: @bookings_dates.to_json, datepicker_target: "start" } }  %>
          <%= f.input :end_date, as: :string, input_html: { data: { datepicker_unavailable_dates_value: @bookings_dates.to_json, datepicker_target: "endDate" } } %>
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger rounded-5" data-bs-dismiss="modal">Close</button>
        <%= f.submit class:"btn btn-outline-primary rounded-5" %>
      <% end %>
      </div>
      </div>

    </div>
  </div>
</div>
