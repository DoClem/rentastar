<div class="container-fluid d-flex flex-column justify-content-center align-items-center mt-5">
  <h1><strong><%= @celebrity.first_name %> <%= @celebrity.last_name %></strong></h1>
  <style>
    .container-fluid h1 {
      font-size: 50px;
    }
  </style>
  <div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col">
        <div class="card" style="background-color: rgba(255, 255, 255, 0.4); border-radius: 50px; padding: 20px">
          <% if @celebrity.photo.attached? %>
            <%= cl_image_tag @celebrity.photo.key, class: "d-block mx-auto img-fluid rounded-5 pb-3", alt: @celebrity.first_name %>
          <% else %>
            <img src="https://cache.cosmopolitan.fr/data/photo/w1200_h630_ci/66/rihanna.jpg" class="d-block mx-auto img-fluid rounded-5 pb-3" alt="..." />
          <% end %>
          <div class="card-body rounded-5 text-center">
            <h3><strong><%= @celebrity.first_name %> <%= @celebrity.last_name %></strong></h3>
            <h4>$ <%= @celebrity.price %> / Day</h4>
            <%# <%= link_to "Cancel", celebrity_path(@celebrity), data: {turbo_method: "delete", turbo_confirm: "Are you sure ?" } %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col">
        <a class="btn btn-primary" href="/celebrities">Back To Celebrities</a>
      </div>
    </div>
  </div>
</div>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Book now!
</button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Booking</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="col">
          <%= simple_form_for([@celebrity, @booking], html: { data: { controller: "datepicker" } }) do |f| %>
            <h3>Please Select Your Dates</h3>
            <%= f.input :start_date, as: :string, input_html: { data: { datepicker_unavailable_dates_value: @bookings_dates.to_json, datepicker_target: "start" } } %>
            <%= f.input :end_date, as: :string, input_html: { data: { datepicker_unavailable_dates_value: @bookings_dates.to_json, datepicker_target: "endDate" } } %>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

