

<div class="container">
  <div class="col-12 col-md-3 mb-2 me-2">
    <form method="get" class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Search celebrities" aria-label="Search" name="query">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>


  <h1 style="padding: 25px" >Search Results</h1>

  <% if @celebrities.any? %>
  <div class="container mt-5">

  <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @celebrities.each do |celebrity| %>
        <div class="col">
        <div class="card" style="background-color: rgba(255, 255, 255, 0.4); border-radius: 50px; padding: 20px">
            <%= link_to celebrity_path(celebrity), style: "text-decoration: none; color: inherit;" do %>
<img src="https://cache.cosmopolitan.fr/data/photo/w1200_h630_ci/66/rihanna.jpg" class="d-block mx-auto img-fluid rounded-5 pb-3" alt="<%= celebrity.first_name %> <%= celebrity.last_name %>">
            <div class="card-body rounded-5 text-center">
                <h5 class="card-title"><%= celebrity.first_name %> <%= celebrity.last_name %></h5>
                <p class="card-text">Price: <%= celebrity.price %>$</p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No celebrities found.</p>
  <% end %>
</div>
