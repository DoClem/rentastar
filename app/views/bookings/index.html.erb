
  <div class="container-fluid d-flex flex-column justify-content-center align-items-center mt-5">

    <h1><strong> BOOKINGS </strong></h1>
    <style>
      .container-fluid h1 {
        font-size: 50px;
      }
    </style>
<div class="col-12 col-md-5 mb-4 me-4" style="margin-top: 50px;">
      <form class="d-flex" action="/search" method="get">
        <input class="form-control me-5 rounded-3 " type="search" placeholder="Search celebrities ..." aria-label="Search" name="query">
        <button class="btn btn-outline-primary rounded-5" type="submit">Search</button>
      </form>
    </div>
    <div>
      <div class="container-fluid d-flex flex-column justify-content-center ">
        <div class="d-flex justify-content-center align-items-start w-100">
          <div class="col-12 col-md-6 mb-5 me-5" style="margin-top: 100px; ">
            <div class="text-center">


      <div class="container mt-5">
  <div class="row row-cols-1 row-cols-lg-1 g-4">
    <% @bookings.each do |booking| %>
      <div class="col">
        <div class="card" style="background-color: rgba(255, 255, 255, 0.4); border-radius: 50px;">
          <%= link_to booking_path(booking), style: "text-decoration: none; color: inherit;" do %>
            <div class="card-body rounded-5 text-center">
              <img src="https://cache.cosmopolitan.fr/data/photo/w1200_h630_ci/66/rihanna.jpg" class="d-block mx-auto img-fluid rounded-5 pb-3" style="border-radius: 0px;"alt="...">
              <h3 class="card-title"><strong><%= booking.celebrity.first_name %> <%= booking.celebrity.last_name %></strong></h3>
              <h4 class="card-text"><strong>Total</strong> <%= booking.celebrity.price %> $</h4>
              <h4 class="card-text"><strong>From</strong> <%= booking.start_date %> <strong>To</strong> <%= booking.end_date %></h4>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
  </div>
</section>
